<UserControl x:Class="WpfGram.Controls.ChatUpdatesMessageContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfGram.Controls" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate x:Key="AddChatMemberTemplate">
            <Border Background="{ui:ThemeResource ControlFillColorDefaultBrush}" Padding="6,4" CornerRadius="10" 
                    HorizontalAlignment="Center">
                <ui:TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=local:ChatUpdatesMessageContent},Path=TextContent}"
                              Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>

    </Grid>
</UserControl>
